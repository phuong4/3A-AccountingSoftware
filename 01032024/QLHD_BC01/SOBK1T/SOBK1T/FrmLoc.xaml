<SmReport:FormFilter x:Class="QLHD_BC01.FrmLoc"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                LanguageID ="QLHD_BC01_0"
                     xmlns:local="clr-namespace:QLHD_BC01"
                     ResizeMode="NoResize"
                     Height="250"
                     Width="600"
                     EscToClose="True"
                     xmlns:SmReport="clr-namespace:SmReport;assembly=SmReport"
                     xmlns:igEditors="http://infragistics.com/Editors"
                     Name="frmQLHD_BC01"
                     xmlns:smc="http://Fast.com.vn/Sm/Windows/Controls"
                     xmlns:igWindows="http://infragistics.com/Windows"
                     WindowStartupLocation="CenterScreen"
                     Loaded="Form_Loaded"
                     xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/TextBlockStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/TextBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/ButtonStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/DataGridViewStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/GroupBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/CheckBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/DateTextBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/NumericTextBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/MaskedTextBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/AutoCompleteTextBoxStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/XamComboEditorStyles.xaml" />
                <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/ExRateTextBoxStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <smc:ConfirmGridView OnOk="ConfirmGridView_OnOk"
                         x:Name="gridMain">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/TextBlockStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/TextBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/ButtonStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/DataGridViewStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/GroupBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/CheckBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/DateTextBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/NumericTextBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/MaskedTextBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/AutoCompleteTextBoxStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/XamComboEditorStyles.xaml" />
                    <smc:CachedResourceDictionary Source="pack://application:,,,/SmStyle;component/ExRateTextBoxStyles.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <smc:ExTabControl Name="TabInfor"
                          Theme="Generic"
                          Margin="12,12,12,0">
            <smc:ExTabItem Header="Thông tin chung"
                           Name="TabMain">
                <smc:GridLayout RowCount="3"
                                RowHeights="0,*,0"
                                ColumnCount="5"
                                ColumnWidths="8,528*,12,0,8">
                    <GroupBox Grid.Row="1"
                              Grid.RowSpan="1"
                              Grid.Column="1"
                              Grid.ColumnSpan="1"
                              Style="{StaticResource TabGroupBoxStyle}"
                              Header="Điều kiện lọc"
                              Name="gbDKLoc">
                        <smc:GridLayout RowCount="3"
                                        ColumnCount="5"
                                        ColumnWidths="100*,140,12,100,140"
                                        HeightPerRow="25"
                                        RowHeights="25,25,25">
                            <TextBlock Text="Từ ngày"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Name="lblTuNgay"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                            <smc:DateTextBox Grid.Column="1"
                                             Grid.Row="0"
                                             Margin="0,2,0,2"
                                             Name="TxtStartDateTime"
                                             TabIndex="1"
                                             IsTabStop="True"
                                             Value="{smc:BindingEx Path=M_NGAY_CT1,ElementName=frmQLHD_BC01}"/>

                            <TextBlock Text="Đến ngày"
                                       Grid.Row="0"
                                       Grid.Column="3"
                                       Name="lblDenNgay"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                            <smc:DateTextBox Grid.Row="0"
                                             Margin="0,2"
                                             Name="TxtEndDateTime"
                                             Grid.Column="4"
                                             TabIndex="2"
                                             IsTabStop="True" 
                                             Value="{smc:BindingEx Path=M_NGAY_CT2,ElementName=frmQLHD_BC01}"/>

                            <TextBlock Text="Mã ĐVCS"
		                       Name="lblMaDVCS"
		                       Grid.Column="0"
		                       Grid.Row="1" />
                            <smc:AutoCompleteTextBox Name="txtMaDVCS"
						 Grid.Column="1"
						 Grid.Row="1"
						 TabIndex="8"
                         Text="{smc:BindingEx Path=M_MA_DVCS,ElementName=frmQLHD_BC01}"
						 ParentControl="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
						 SysObj="{Binding Path=BindingSysObj,RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
						 AllowEmty="True"
						 AllowWrong="False"
						 ListID="dmdvcs" />

                            <TextBlock Text="Chứng từ từ số"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Name="lblSoCtBatDau"
                                       Visibility="Hidden"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Column="1"
                                     Grid.Row="1"
                                     Margin="0,2"
                                     Visibility="Hidden"
                                     Name="txtStartNumberVouchers"
                                     TabIndex="4"
                                     IsTabStop="True" />
                            <TextBlock Text="Đến số"
                                       Grid.Row="1"
                                       Grid.Column="3"
                                       Visibility="Hidden"
                                       Name="lblSoCtKetThuc"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                            <TextBox Grid.Column="4"
                                     Grid.Row="1"
                                     Margin="0,2"
                                     Visibility="Hidden"
                                     Name="txtEndNumberVouchers"
                                     TabIndex="5"
                                     IsTabStop="True" />
                            <TextBlock Text="Mã khách"
                                       Visibility="Hidden"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Name="lblCustomer"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                            <smc:AutoCompleteTextBox Grid.Column="1"
                                                     Grid.Row="2"
                                                     Visibility="Hidden"
                                                     AllowEmty="True"
                                                     AllowWrong="True"
                                                     LookupMode="True"
                                                     Name="txtCustomer"
                                                     Text="{smc:BindingEx Path=M_MA_KH, ElementName=frmQLHD_BC01}"
                                                     ParentControl="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                     ListID="dmkh"
                                                     SysObj="{Binding BindingSysObj, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                     Margin="0,2"
                                                     LostFocus="txtMaKhach_LostFocus"
                                                     TabIndex="6"
                                                     IsTabStop="True" />
                            <TextBlock Grid.Column="3"
                                       Grid.Row="2"
                                       Grid.ColumnSpan="2"
                                       Visibility="Hidden"
                                       Margin="2"
                                       Name="lblTenKhach" />
                        </smc:GridLayout>
                    </GroupBox>
                    <smc:GridLayout Grid.Row="1"
                                    Grid.RowSpan="1"
                                    Visibility="Hidden"
                                    Grid.Column="3"
                                    RowCount="3"
                                    RowHeights="51,4,*">
                        <GroupBox Grid.Row="0"
                              Name="GroupDVCS"
                              Header=""
                              Style="{StaticResource TabGroupBoxStyle}"
                              Margin="0,0,0,0">
                            <smc:GridLayout RowCount="1"
                                        ColumnCount="2"
                                        ColumnWidths="100*,140"
                                        RowHeights="25">

                            </smc:GridLayout>
                        </GroupBox>
                        <GroupBox Grid.Row="2"
                              Grid.RowSpan="1"
                              Grid.Column="3"
                              Header="Mẫu báo cáo"
                              Style="{StaticResource TabGroupBoxStyle}"
                              Margin="0,0,0,0"
                              Name="gbMauBC">
                            <smc:GridLayout RowCount="1"
                                        ColumnCount="2"
                                        ColumnWidths="100*,140"
                                        HeightPerRow="25"
                                        RowHeights="25*">
                                <TextBlock Grid.Row="0"
                                       Name="lblKindReport"
                                       Text="Mẫu VND/ngoại tệ"
                                       Grid.Column="0"
                                       Margin="0,2"
                                       VerticalAlignment="Center" />
                                <igEditors:XamComboEditor Name="cbMauBaoCao2"
                                                      Grid.Column="1"
                                                      Grid.Row="0"
                                                      IsTabStop="False"
                                                      SelectedIndex="{smc:BindingEx Path=M_MAU_BC_NT,ElementName=frmQLHD_BC01}">
                                    <igEditors:XamComboEditor.ItemsProvider>
                                        <igEditors:ComboBoxItemsProvider>
                                            <igEditors:ComboBoxItemsProvider.Items>
                                                <smc:ExComboBoxDataItem DisplayText="{x:Static local:StartUp.M_ma_nt0}"
                                                                    Value="0" />
                                                <smc:ExComboBoxDataItem DisplayText="Ngoại tệ"
                                                                    DisplayText2="FC"
                                                                    Value="1" />
                                            </igEditors:ComboBoxItemsProvider.Items>
                                        </igEditors:ComboBoxItemsProvider>
                                    </igEditors:XamComboEditor.ItemsProvider>
                                </igEditors:XamComboEditor>
                            </smc:GridLayout>
                        </GroupBox>
                    </smc:GridLayout>
                    <SmReport:ControlDetailFilter3 Name="GridSearch"
                                                   Grid.Row="3"
                                                   Visibility="Hidden"
                                                   Grid.RowSpan="1"
                                                   filterID="QLHD_BC01A"
                                                   Grid.Column="1"
                                                   GroupBoxStyleResourceKey="TabGroupBoxStyle"
                                                   Grid.ColumnSpan="3"
                                                   IsTabStop="False" />
                </smc:GridLayout>
            </smc:ExTabItem>
        </smc:ExTabControl>
        <Canvas Grid.Row="1"
                Width="150"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,12,33">
            <TextBlock Text="F5 - Tra cứu"
                       Name="lblTraCuu"
                       Width="150"
                       HorizontalAlignment="Right"
                       TextAlignment="Right" />
        </Canvas>
    </smc:ConfirmGridView>
</SmReport:FormFilter>
