                                       Grid.Column="0"
                                       VerticalAlignment="Center" />
                            <smc:AutoCompleteTextBox Name="txtMaKhach"
                                                     Grid.Column="1"
                                                     Grid.Row="1"
                                                     ListID="dmkh"
                                                     Text="{smc:BindingEx Path=M_MA_KH, ElementName=TransactionFrm}"
                                                     SysObj="{Binding ElementName=TransactionFrm,Path=BindingSysObj}"
                                                     AllowEmty="True"
                                                     AllowWrong="True"
                                                     ParentControl="{Binding ElementName=TransactionFrm}"
                                                     LostFocus="txtMaKhach_LostFocus"
                                                     TabIndex="7"
                                                     IsTabStop="True" />
