                    <SmReport:ControlDetailFilter3 Name="GridSearch"
                                                   GroupBoxStyleResourceKey="TabGroupBoxStyle"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="3"
                                                   Grid.Row="2"
                                                   IsShowCheckTableList="True"
                                                   filterID="NN_BCLIN"
                                                   IsTabStop="False" />
