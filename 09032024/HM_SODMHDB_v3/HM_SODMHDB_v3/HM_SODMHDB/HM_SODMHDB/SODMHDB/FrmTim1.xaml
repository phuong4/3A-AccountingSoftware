                               Visibility="Hidden"
                               Name="tblUserCoKhong"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="6"
                               Text="Mã bộ phận"
                               Visibility="Hidden"
                               Name="tblma_bp"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <smc:AutoCompleteTextBox Name="txtMa_bp"
                                             Grid.Column="1"
                                             Grid.Row="6"
                                             Visibility="Hidden"
                                             TabIndex="72"
                                             Text="{smc:BindingEx Path=M_MA_BP,ElementName=FrmFilter}"
                                             ParentControl="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                             SysObj="{ Binding Path=BindingSysObj,RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                             AllowEmty="True"
                                             LostFocus="txtMa_bp_LostFocus"
                                             AllowWrong="False"
                                             ListID="dmbp"
                                             Margin="0,2"
                                             />
                    <TextBlock Grid.Column="3"
                               Grid.Row="6"
                               Grid.ColumnSpan="4"
                               Visibility="Hidden"
                               Name="tblten_bp"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                   
                        <TextBlock Grid.Column="0"
                                   Grid.Row="3"
                                   Name="tblStatus"
                                   Visibility="Hidden"
                                   Style="{StaticResource ContentTextStyle}"
