                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <TextBlock Grid.Column="0"
                               Grid.Row="4"
                               Text="Số tiền từ"
                               Visibility="Hidden"
                               Name="tblSotien1"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <smc:NumericTextBox x:Name="txtSoTien1"
                                        TabIndex="55"
                                        Margin="0,2"
