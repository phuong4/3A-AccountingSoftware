                               Text="Đến"
                               Visibility="Hidden"
                               Name="tblHanThanhToan2"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <smc:NumericTextBox x:Name="txtHanThanhToan2"
                                        TabIndex="70"
                                        Margin="0,2"
                                        Grid.Column="4"
                                        Visibility="Hidden"
                                        Format="#"
                                        Grid.Row="5"/>
                    <TextBlock Grid.Column="3"
                               Grid.Row="3"
                               Grid.ColumnSpan="4"
                               Visibility="Hidden"
                               Name="tblten_tk"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    
                    <!--nguoi su dung-->
                    <TextBlock Grid.Column="0"
                               Grid.Row="5"
                               Text="Lọc NSD"
                               Visibility="Hidden"
                               Name="tblUser"
                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <smc:MaskedTextBox Grid.Column="1"
                                       Grid.Row="5"
                                       TabIndex="77"
                                       Name="txtUser"
                                       Format="M"
                                       Visibility="Hidden"
                                       InputMask="0,1"
                                       Margin="0,2"
                                       TextChanged="txtUser_TextChanged"
                                       Style="{StaticResource MaskedTextBoxStyle}"/>

                    <TextBlock Grid.Column="3"
