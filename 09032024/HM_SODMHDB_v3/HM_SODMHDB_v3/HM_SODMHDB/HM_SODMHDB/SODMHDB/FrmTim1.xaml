                               Style="{StaticResource ContentTextStyle}"
                               Margin="0" />
                    <TextBox Grid.Column="4"
                             Grid.Row="0"
                             TabIndex="12"
                             Visibility="Hidden"
                             Name="txtSo_ct2"
